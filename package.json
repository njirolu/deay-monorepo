{
  "name": "deay-monorepo",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev:mcp": "bun --watch packages/mcp-server/src/index.ts",
    "build:ui": "bun run --cwd packages/ui build",
    "build:mcp": "bun run --cwd packages/mcp-server build",
    "build:all": "bun run build:ui && bun run build:mcp",
    "publish:all": "bun run build:all && bun publish --filter './packages/*'",
    "publish:ui": "cd packages/ui && bun run build && bun publish --access public",
    "publish:mcp": "cd packages/mcp-server && bun run build && bun publish --access public"
  },
  "devDependencies": {
    "@angular/compiler": "19.2.17",
    "@angular/compiler-cli": "19.2.17",
    "@angular/core": "19.2.17",
    "@angular/common": "19.2.17",
    "@angular/forms": "19.2.17",
    "@types/node": "22.19.3",
    "ng-packagr": "19.2.2",
    "typescript": "5.6.3",
    "tslib": "2.8.1",
    "zone.js": "0.15.1"
  }
}
